
@{
    ViewBag.Title = "Thêm mới danh sách sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}



<div class="card card-primary">

    <!-- /.card-header -->
    <!-- form start -->
    <form id="form_act" enctype="multipart/form-data" method="post">
        <div class="card-body">
            
            <div class="form-group">
                <label for="exampleInputEmail1">MSSV</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="MSSV" name="f_MSSV">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Họ và tên</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Họ và tên" name="f_Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Địa chỉ</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Địa chỉ" name="f_Address">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Ngày sinh</label>
                <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Ngày sinh" name="f_Birthday">
            </div>
            <div class="form-group">
                <label for="Gioitinh">Giới tính</label>
                <select class="form-control" id="Gioitinh" name="f_Gender">
                    <option value="Nam">Nam</option>
                    <option value="Nu">Nữ</option>
                    <option value="Khac">Khác</option>
                </select>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="button" class="btn btn-primary" id="btn-insert">Submit</button>
        </div>
    </form>
</div>

<script>
    function Create() {
        if (confirm("Xác nhận thêm sinh viên")) {
            let form = $('#form_act')[0];
            let formData = new FormData(form);
            console.log(formData);
            $.ajax({
                url: "/Sinhvien/PostCreate",
                method: "POST",
                processData: false,
                contentType: false,
                data: formData,
                success: function (result, status, xhr) {
                    let rs = JSON.parse(result);
                    console.log(result);
                    toastr.success(rs.Message);
                },
                error: function () {
                    console.log("Mất kết nối với máy chủ!");
                }
            });
        }
    }

    $(function () {
        $('#btn-insert').click(function () {

            Create();
        });
    });
</script>

