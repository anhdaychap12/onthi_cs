
@{
    ViewBag.Title = "Thêm mới danh sách lớp";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="card card-primary">

    <!-- /.card-header -->
    <!-- form start -->
    <form id="form_act" enctype="multipart/form-data" method="post">
        <div class="card-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Mã lớp</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Mã Lớp" name="f_MaLop">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Tên lớp</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tên lớp" name="f_TenLop">
            </div>
            
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="button" class="btn btn-primary" id="btn-insert">Submit</button>
        </div>
    </form>
</div>

<script>
    function Create() {
        if (confirm("Xác nhận thêm sinh viên")) {
            let form = $('#form_act')[0];
            let formData = new FormData(form);
            console.log(formData);
            $.ajax({
                url: "/Lop/PostCreate",
                method: "POST",
                processData: false,
                contentType: false,
                data: formData,
                success: function (result, status, xhr) {
                    let rs = JSON.parse(result);
                    console.log(result);
                    toastr.success(rs.Message);
                },
                error: function () {
                    console.log("Mất kết nối với máy chủ!");
                }
            });
        }
    }

    $(function () {
        $('#btn-insert').click(function () {

            Create();
        });
    });
</script>

